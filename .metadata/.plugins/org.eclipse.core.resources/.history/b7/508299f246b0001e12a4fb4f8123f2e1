<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.myweb.www.repository.BoardDAO">
	<insert id="insert">
		insert into board(title,writer,content)
		values(#{title},#{writer},#{content})
	</insert>
	
	<select id="getlist" resultType="com.myweb.www.domain.BoardVO">
		select * from board
		<include refid="search"></include>
		order by bno desc
		limit #{pageStart},#{qty}
	</select>
	
	<select id="getTotalCount" resultType="int">
		select count(bno) from board <include refid="search"></include>
	</select>
	
	<select id="getdetail" resultType="com.myweb.www.domain.BoardVO" parameterType="long">
		select * from board 
		where bno = #{bno}
	</select>
	
	<update id="updateReadCount" parameterType="long">
		update board set read_count = read_count +1 where bno = #{bno}
	</update>
	
	<update id="updateCommentCount">
		update board b set cmt_qty =
		(select count(bno) from comment where bno = b.bno)
	</update>
	
	<update id="fileCount">
		update board b set b.has_file =
		(select count(bno) from file where bno = b.bno)
	</update>
	
	<update id="update">
		update board set
		title = #{title}, content= #{content}, mod_date = now()
    	where bno = #{bno}
	</update>
	
	<delete id="delete" parameterType="long">
		delete from board 
		where bno = #{bno}
	</delete>
	
	<!--  -->
	<select id="selectOneBno" resultType="long">
		select max(bno) from board
	</select>
	
	<!-- Search -->
	<!-- prefixOverrides : 실행될 쿼리의 <trim> 문 안에 쿼리 가장 앞에 해당하는 문자들이 있으면 자동으로 지워준다. -->
	<sql id="search">
		<if test="type != null">
			<trim prefix="where(" suffix=")" prefixOverrides="or">
				<foreach collection="typeToArray" item="type">
					<trim prefix="or">
						<choose>
							<when test="type == 't'.toString()">
								title like concat('%',#{keyword},'%')
							</when>
							<when test="type == 'w'.toString()">
								writer like concat('%',#{keyword},'%')
							</when>
							<when test="type == 'c'.toString()">
								content like concat('%',#{keyword},'%')
							</when>
						</choose>	
					</trim>
				</foreach>
			</trim>
		</if>
	</sql>
	
</mapper>