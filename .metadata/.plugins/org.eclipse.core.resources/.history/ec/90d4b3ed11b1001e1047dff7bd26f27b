package com.myweb.www.service;

import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.stereotype.Service;

import com.myweb.www.repository.MemberDAO;
import com.myweb.www.security.MemberVO;

import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;

@Service
@RequiredArgsConstructor
@Slf4j
public class MemberServiceImpl implements MemberService{

	private final MemberDAO mdao;
	
	BCryptPasswordEncoder passwordEncoder; // 암호화
	
	@Override
	public int register(MemberVO mvo) {
		log.info("member register in");
		
		MemberVO tempMvo = mdao.getUser(mvo.getEmail());
		
		if(tempMvo != null) {
			return 0; // 아이디가 중복이였을 경우 
		}
		
		if(mvo.getEmail() == null || mvo.getEmail().length() == 0) {
			return 0;
		}
		if(mvo.getPwd() == null || mvo.getPwd().length() == 9) {
			return 0;
		}
		
		String pw = mvo.getPwd();
		String encoePw = passwordEncoder.encode(pw);
		mvo.setPwd(encoePw);
		
		int isOk = mdao.register(mvo);
		
		return 1;
	}

}
